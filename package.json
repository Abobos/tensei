{
    "name": "@flamingo/main",
    "version": "0.0.0",
    "main": "./build/server/index.js",
    "license": "MIT",
    "types": "./build/typings/index.d.ts",
    "bin": {
        "flamingo": "build/cli/index.js"
    },
    "devDependencies": {
        "lerna": "^3.22.1",
        "prettier": "^2.0.5"
    },
    "scripts": {
        "test": "yarn lerna run test",
        "build": "yarn lerna run build",
        "dev": "yarn lerna run dev"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
        },
        "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "private": true,
    "workspaces": {
      "packages": [
        "packages/*",
        "examples/*"
      ],
      "nohoist": [
          "**/laravel-mix"
      ]
    }

{
    "name": "@tensei/trix",
    "version": "0.2.1",
    "main": "./build/index.js",
    "license": "MIT",
    "types": "./build/index.d.ts",
    "scripts": {
        "build": "yarn build:client && tsc --p tsconfig.json",
        "dev": "tsc --watch --p tsconfig.json",
        "prettier": "prettier --write './**/*.{js,json,ts,css}'",
        "dev:client": "parcel watch src/client/index.js --no-autoinstall --bundle-node-modules -d 'build/client'",
        "build:client": "NODE_ENV=production parcel build src/client/index.js --no-source-maps --bundle-node-modules -d 'build/client'"
    },
    "devDependencies": {
        "parcel-bundler": "^1.12.4",
        "react": "^16.13.1",
        "snowpack": "^2.7.7",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "@contentful/forma-36-react-components": "^3.67.1",
        "@tensei/common": "^0.2.1",
        "react-dom": "^17.0.1",
        "trix": "^1.2.4"
    },
    "publishConfig": {
        "access": "public"
    }
}
